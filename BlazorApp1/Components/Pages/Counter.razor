@*
@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<ol>
            <li>
                <MatTextField Label="What's your name?" bind="@name"></MatTextField>
            </li>
            <li>
                <MatButton OnClick="@OpenDialog" Raised="true">Pick one</MatButton>
            </li>
            @if (animal != null)
            {
                <li>You chose: @animal</li>
            }
        </ol>
        <MatDialog bind="@dialogIsOpen">
            <MatDialogTitle>Hi @name</MatDialogTitle>
            <MatDialogContent>
                <p>What's your favorite animal?</p>
                <MatSelect TValue="string" Label="Title">
                    <MatOptionString ></MatOptionString>
                    <MatOptionString Value="dr">Dr.</MatOptionString>
                    <MatOptionString Value="prof">Prof.</MatOptionString>
                </MatSelect>
                <MatTextField bind="@dialogAnimal"></MatTextField>
 
 
            </MatDialogContent>
            <MatDialogActions>
                $1$<MatButton OnClick="@(e => { dialogIsOpen = false; })">No Thanks</MatButton>#1#
                <MatButton OnClick="@OkClick">OK</MatButton>
            </MatDialogActions>
        </MatDialog>
 
@code
{
    bool dialogIsOpen = false;
    string name = null;
    string animal = null;
    string dialogAnimal = null;
 
    void OpenDialog()
    {
        dialogAnimal = null;
        dialogIsOpen = true;
    }

    void OkClick()
    {
        animal = dialogAnimal;
        dialogIsOpen = false;
    }
}
*@
